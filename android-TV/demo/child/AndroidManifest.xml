<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ch"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
		<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        <activity
            android:name="com.example.child.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.child.LockScreenActivity" >  
        	<intent-filter>  
	            <action android:name="mark.zhang"></action>  
	            <category android:name="android.intent.category.DEFAULT"/>  
	        </intent-filter>  
		</activity>
        <service android:name="com.example.child.MyService" >  
        </service>
        <receiver android:name="com.example.child.BootCompletedReceiver">    
            <intent-filter>    
                <action android:name="android.intent.action.BOOT_COMPLETED"/>    
            </intent-filter>    
        </receiver>
    </application>

</manifest>
